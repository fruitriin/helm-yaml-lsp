{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-client",
        "${workspaceFolder}/samples"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-client/dist/**/*.js",
        "${workspaceFolder}/packages/server/dist/**/*.js"
      ],
      "preLaunchTask": "watch-with-cleanup",
      "stopOnEntry": false
    },
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "port": "${env:LSP_DEBUG_PORT:6009}",
      "restart": true,
      "outFiles": ["${workspaceFolder}/packages/server/dist/**/*.js"]
    }
  ],
  "compounds": [
    {
      "name": "Client + Server",
      "configurations": ["Launch Extension", "Attach to Server"]
    }
  ]
}
