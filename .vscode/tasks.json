{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "kill-debug-port",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "PORT=${LSP_DEBUG_PORT:-6009}; lsof -ti:$PORT 2>/dev/null | xargs kill -9 2>/dev/null || true"
      ],
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "bun run watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*(watch|build).*$",
          "endsPattern": "^└─ Running\\.\\.\\.$"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      }
    },
    {
      "label": "watch-with-cleanup",
      "dependsOrder": "sequence",
      "dependsOn": ["kill-debug-port", "watch"],
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "bun run build",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ]
}
