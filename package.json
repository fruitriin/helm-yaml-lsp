{
  "name": "helm-yaml-lsp",
  "version": "0.3.0",
  "description": "Argo Workflows Language Server Protocol implementation for Helm and YAML",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/helm-yaml-lsp.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "watch": "bun run --filter '*' watch",
    "clean": "bun run --filter '*' clean",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "biome lint . && cd packages/server && eslint src/**/*.ts",
    "lint:fix": "biome lint --write .",
    "lint:eslint": "cd packages/server && eslint src/**/*.ts",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "check": "bun run typecheck && biome check .",
    "check:write": "biome check --write .",
    "test": "bun test ./test/**/*.test.ts ./packages/*/test/**/*.test.ts",
    "test:packages": "bun run --filter '*' test",
    "test:all": "bun run test && bun run test:packages",
    "package": "cd packages/vscode-client && bun run package"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/bun": "^1.3.6",
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  }
}
