{
  "name": "helm-yaml-lsp-server",
  "version": "0.18.0",
  "description": "Argo Workflows Language Server for Helm and Kubernetes YAML",
  "license": "MIT",
  "main": "dist/server.js",
  "files": [
    "dist/**"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fruitriin/helm-yaml-lsp.git",
    "directory": "packages/server"
  },
  "homepage": "https://github.com/fruitriin/helm-yaml-lsp#readme",
  "bugs": {
    "url": "https://github.com/fruitriin/helm-yaml-lsp/issues"
  },
  "keywords": [
    "argo",
    "workflows",
    "kubernetes",
    "helm",
    "yaml",
    "lsp",
    "language-server"
  ],
  "scripts": {
    "build": "bun build src/server.ts --outdir dist --target node --format cjs --sourcemap=external",
    "watch": "bun build src/server.ts --outdir dist --target node --format cjs --sourcemap=external --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "biome lint src",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:all": "bun run lint && bun run lint:eslint",
    "format": "biome format src"
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "js-yaml": "^4.1.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-languageserver-types": "^3.17.5"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2"
  }
}
