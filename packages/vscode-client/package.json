{
  "name": "helm-yaml-lsp-client",
  "displayName": "Argo Workflows LSP",
  "description": "Language Server Protocol support for Argo Workflows, Helm, and Kubernetes YAML",
  "version": "0.12.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "argo",
    "workflows",
    "kubernetes",
    "helm",
    "yaml"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Argo Workflows LSP",
      "properties": {
        "argoWorkflowsLSP.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 1000,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "argoWorkflowsLSP.enableDiagnostics": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable or disable diagnostics (error detection) for Argo Workflows and Helm templates."
        },
        "argoWorkflowsLSP.enableHover": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable or disable hover information."
        },
        "argoWorkflowsLSP.enableDefinition": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable or disable go-to-definition feature."
        },
        "argoWorkflowsLSP.enableCompletion": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable or disable auto-completion feature."
        },
        "argoWorkflowsLSP.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "build": "bun build src/extension.ts --outdir dist --target node --format cjs --external vscode --sourcemap=external",
    "build:test": "tsc -p test-integration/tsconfig.json",
    "watch": "bun build src/extension.ts --outdir dist --target node --format cjs --external vscode --sourcemap=external --watch",
    "clean": "rm -rf dist test-integration/out",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:integration": "bun run build && bun run build:test && node test-integration/out/runTest.js",
    "lint": "biome lint src",
    "format": "biome format src",
    "package": "bun run build && vsce package --no-dependencies"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5"
  }
}
